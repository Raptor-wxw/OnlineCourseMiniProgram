page {
  background: #F5F5F5;
}

.logo {
  text-align: center;
  padding-top: 50rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #000000;
}

.logo image {
  width: 250rpx;
  height: 280rpx;
}

.tips{
  color: red;
  margin-top: 10px;
  font-size: 12px;
  text-align: center;
  font-family: Cursive;
}

.search-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FF052F;
  color: #fff;
  height: 80rpx;
  padding: 10rpx 20rpx;
  z-index: 100;
}

.search-container input {
  background: #fff;
  color: #aaa;
  padding: 5px 80rpx 5px 10rpx;
  height: 40rpx;
  width: 100%;
  border-radius: 8rpx;
}

.search-container icon {
  position: absolute;
  z-index: 10;
  top: 50%;
  margin-top: -20rpx;
  right: 40rpx;
}

